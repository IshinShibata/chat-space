%ul.like{id: "like-link-#{message.id}"}
  %li.like-btn
    - if message.like_user(current_user.id)
      = button_to group_message_like_path(message_id: message.id, id: current_user.id), method: :delete do
        = fa_icon("thumbs-up lg", class: "thumbs-up-icon")
    - else
      = button_to group_message_likes_path(message_id: message.id), method: :post do
        = fa_icon("thumbs-up lg", class: "thumbs-up-icon-greyout")
  %li.likes-count
    = message.likes_count
